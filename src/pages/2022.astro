---
import la_cloche from '@/assets/2022/la-cloche.jpg'
import hilton_falls from '@/assets/2022/hilton-falls.jpg'
import arrowhead from '@/assets/2022/arrowhead.jpg'
import indian_head_cove from '@/assets/2022/indian-head-cove.jpg'
import lake_of_two_rivers_sunset from '@/assets/2022/lake-of-two-rivers-sunset.jpg'
import lake_of_two_rivers_sunrise from '@/assets/2022/lake-of-two-rivers-sunrise.jpg'
import morningstar_mill from '@/assets/2022/morningstar-mill.jpg'
import highlands from '@/assets/2022/highlands.jpg'
import swayze_falls from '@/assets/2022/swayze-falls.jpg'
import dundas_valley from '@/assets/2022/dundas-valley.jpg'
import albion_falls from '@/assets/2022/albion-falls.jpg'
import eramosa_karst from '@/assets/2022/eramosa-karst.jpg'

import Layout from '../layouts/Layout.astro';
import GalleryItem from '../components/GalleryItem.astro';
---

<Layout gallery="2022">
  <GalleryItem source={la_cloche} title="La Cloche Silhouette" description="A beautiful unnamed lake on the remote northern side of the trail" />
  <GalleryItem source={hilton_falls} title="Hilton Falls" description="It's not the height of the drop but the volume of the water" />
  <GalleryItem source={arrowhead} title="Arrowhead" description="Learning to ski in -32C weather" />
  <GalleryItem source={indian_head_cove} title="Indian Head Cove" description="The jump is scary once you realize how cold the water is" />
  <GalleryItem source={lake_of_two_rivers_sunset} title="Lake of Two Rivers" description="I'm sure the ducks are enjoying the vapourwave sunset as much as I am" />
  <GalleryItem source={lake_of_two_rivers_sunrise} title="Lake of Two Rivers" description="A beautiful sunrise to complement yesterday's sunset" />
  <GalleryItem source={morningstar_mill} title="Morningstar Mill" description="Totally worth the 2km detour" />
  <GalleryItem source={highlands} title="Starling Pond" description="Green, blue, and white are the only colours I need" />
  <GalleryItem source={swayze_falls} title="Swayze Falls" description="Approaching a waterfall from the bottom is a magical feeling" />
  <GalleryItem source={dundas_valley} title="Dundas Valley" description="Hiking 54km in one day" />
  <GalleryItem source={albion_falls} title="Albion Falls" description="A particularly good year for autumn colours" />
  <GalleryItem source={eramosa_karst} title="Eramosa Karst" description="A particularly beautiful first snowfall of the year" />
</Layout>
