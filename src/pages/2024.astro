---
import northern_lights from '@/assets/2024/northern-lights.jpg'
import killarney from '@/assets/2024/killarney.jpg'
import blue_tent from '@/assets/2024/blue-tent.jpg'
import lakehouse from '@/assets/2024/lakehouse.jpg'
import lake_of_two_rivers from '@/assets/2024/lake-of-two-rivers.jpg'
import fairy_lake from '@/assets/2024/fairy-lake.jpg'
import eramosa from '@/assets/2024/eramosa-karst.jpg'
import stubbs_falls from '@/assets/2024/stubbs_falls.jpg'
import arrowhead from '@/assets/2024/arrowhead.jpg'
import big_bend from '@/assets/2024/big-bend.jpg'
