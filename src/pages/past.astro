---
import emerald_lake_pano from '@/assets/past/emerald-lake-pano.jpg'
import yoho_sunset from '@/assets/past/yoho-sunset.jpg'
import trans_canada_highway from '@/assets/past/trans-canada-highway.jpg'
import saskatchewan_landing_picnic from '@/assets/past/saskatchewan-landing-picnic.jpg'
import cerro_san_cristobal_gondola from '@/assets/past/cerro-san-cristobal-gondola.jpg'
import notre_dame_basilica from '@/assets/past/notre-dame-basilica.jpg'
import mont_tremblant from '@/assets/past/mont-tremblant.jpg'
import shopify_plus from '@/assets/past/shopify-plus.jpg'
import thousand_islands from '@/assets/past/thousand-islands.jpg'
import art_gallery_ontario from '@/assets/past/art-gallery-ontario.jpg'
import orange_julep from '@/assets/past/orange-julep.jpg'
import andes from '@/assets/past/andes.jpg'
import toronto from '@/assets/past/toronto.jpg'
import saskatchewan_landing_camping from '@/assets/past/saskatchewan-landing-camping.jpg'

import Layout from '../layouts/Layout.astro';
import GalleryItem from '../components/GalleryItem.astro';
---

<Layout>
  <GalleryItem source={emerald_lake_pano} title="Emerald Lake" description="This must be where Heaven and Earth meets" />
  <GalleryItem source={yoho_sunset} title="Yoho" description="Sunset on the 3rd day of driving from Vancouver to Toronto" />
  <GalleryItem source={trans_canada_highway} title="Trans Canada" description="The mountains progressively grew as we neared the Great Divide" />
  <GalleryItem source={saskatchewan_landing_picnic} title="Saskatchewan Landing" description="A few hills who defy the convention of endless flat plains" />
  <GalleryItem source={cerro_san_cristobal_gondola} title="Cerro San Cristobal" description="Getting my first job 10,000km away from where I lived was a good choice" />
  <GalleryItem source={notre_dame_basilica} title="Notre Dame Basilica" description="Usually I like being outdoors, places like this are the exception" />
  <GalleryItem source={mont_tremblant} title="Mont Tremblant" description="We arrived at the top after the last gondola left, thankfully a ranger gave us a ride down" />
  <GalleryItem source={shopify_plus} title="Shopify" description="Probably the coolest looking office I'll ever work at" />
  <GalleryItem source={thousand_islands} title="Thousand Islands" description="A floating miniature castle that looks elegant from every angle" />
  <GalleryItem source={art_gallery_ontario} title="AGO" description="An exhibition titled the Infinity Room" />
  <GalleryItem source={orange_julep} title="Orange Julep" description="Never a wrong moment for Orange Julep" />
  <GalleryItem source={andes} title="Embalse El Yeso" description="High in the Andes Mountains" />
  <GalleryItem source={toronto} title="Toronto" description="All roads lead to the CN Tower" />
  <GalleryItem source={saskatchewan_landing_camping} title="Saskatchewan Landing" description="A most picturesque camping spot" />
</Layout>
